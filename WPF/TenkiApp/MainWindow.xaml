<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        x:Class="TenkiApp.MainWindow"
        Title="TenkiApp" Height="550" Width="1050" FontSize="16"
        Foreground="#E0E0E0"  ResizeMode="NoResize">

    <Grid Background="#1E2749">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="TenkiApp 🌡️" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Margin="15,0,0,0"/>

            <TextBlock x:Name="TimeBox" 
                       Grid.Row="0" 
                       Grid.Column="1" 
                       Text="00:00:00" 
                       FontSize="36" 
                       FontWeight="Light" 
                       VerticalAlignment="Center"
                       Margin="0,0,15,0" 
                       TextAlignment="Right"/>

            <Border Grid.Row="1" Grid.RowSpan="2" 
                    Margin="10,5,10,10" 
                    Background="#304060" 
                    CornerRadius="10"/>

            <TextBlock Grid.Row="1" 
                       Text="🗺️ 地図をクリックして場所を選択" 
                       FontSize="18"
                       Foreground="#A0C0FF"
                       FontWeight="SemiBold"
                       Margin="25,15,0,0"/>

            <Grid Grid.Row="2" Margin="15,10,15,15">
                <Wpf:WebView2 x:Name="MapViewer" Margin="0,0,0,0"/>
            </Grid>

            <Border Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" 
                    Margin="10,5,10,10" 
                    Background="#304060" 
                    CornerRadius="10"/>

            <TextBlock Grid.Row="1" Grid.Column="1" 
                       x:Name="LocationBlock" 
                       Text="📍 場所名: " 
                       FontSize="22" 
                       FontWeight="SemiBold"
                       Foreground="White"
                       Margin="25,15,15,5"/>

            <ScrollViewer x:Name="WeatherScroll" 
                          Grid.Row="2" 
                          Grid.Column="1" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Hidden" 
                          Margin="10,5,10,10" 
                          PreviewMouseWheel="WeatherScrollViewer_PreviewMouseWheel" 
                          ScrollChanged="WeatherScrollViewer_ScrollChanged">

                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#556080"/>
                        <Setter Property="Height" Value="8"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid>
                                        <Border Background="#283550"
                                                Height="8" VerticalAlignment="Center"
                                                CornerRadius="4"/>
                                        <Track x:Name="PART_Track" IsDirectionReversed="False">
                                            <Track.Thumb>
                                                <Thumb>
                                                    <Thumb.Template>
                                                        <ControlTemplate TargetType="Thumb">
                                                            <Border Background="#A0C0FF" 
                                                                    Height="8"
                                                                    CornerRadius="4"/>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>

                <StackPanel x:Name="WeatherPanel" Orientation="Horizontal" VerticalAlignment="Stretch"/>

            </ScrollViewer>

            <Border x:Name="LoadingOverlay"
            Background="#A0304060" Grid.Row="2" Grid.Column="1" Visibility="Visible"      VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Panel.ZIndex="10">
                <TextBlock Text="データ読み込み中..."
                   Foreground="White"
                   FontSize="36"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>