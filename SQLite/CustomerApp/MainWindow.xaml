<Window x:Class="CustomerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomerApp"
        mc:Ignorable="d"
        Title="顧客管理アプリケーション" Height="490" Width="800" FontSize="16">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border BorderThickness="3" BorderBrush="LightGray" Margin="-5" Grid.ColumnSpan="2"/>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.22*"/>
                <RowDefinition Height="0.85*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border BorderBrush="LightGray" BorderThickness="0,0,2,0" Margin="-5,-5,0,-5" Grid.RowSpan="3"/>

            <Grid Grid.Row="0">
                <TextBlock Text="顧客情報入力画面" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="5">
                    <TextBlock Text="名前" Margin="5,6,5,7"/>
                    <TextBlock Text="電話番号" Margin="5,5,5,7"/>
                    <TextBlock Text="住所" Margin="5,5,5,7"/>
                    <Button x:Name="OpenPicture_Button" Content="画像" Height="45" Margin="5,5,5,7" Click="OpenPicture_Button_Click"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5">
                    <TextBox x:Name="Name_TextBox" Margin="5" TextChanged="Input_TextBox_TextChanged"/>
                    <TextBox x:Name="Phone_TextBox" Margin="5" TextChanged="Input_TextBox_TextChanged"/>
                    <TextBox x:Name="Address_TextBox" Margin="5" TextChanged="Input_TextBox_TextChanged"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button x:Name="Save_Button" Grid.Column="0" Content="登録" Margin="5" Click="Save_Button_Click" IsEnabled="false"/>
                        <Button x:Name="Update_Button" Grid.Column="1" Content="更新" Margin="5" Click="Update_Button_Click" IsEnabled="false"/>
                        <Button x:Name="Delete_Button" Grid.Column="2" Content="削除" Margin="5" Click="Delete_Button_Click" IsEnabled="false"/>
                    </Grid>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2">
                <Grid Margin="5">
                    <Border Background="Black"/>
                    <Image x:Name="Picture_Image" Stretch="Uniform"/>
                </Grid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="検索"/>

                    <TextBox Grid.Column="1" x:Name="Search_TextBox" TextChanged="Search_TextBox_TextChanged"/>
                </Grid>
                <TextBlock x:Name="List_Counter" Margin="0,5,0,0" HorizontalAlignment="Right"/>
            </StackPanel>
            
            <ListView Grid.Row="1" x:Name="Customer_ListView" Margin="5" SelectionChanged="Customer_ListView_SelectionChanged">
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <!--
                                <TextBlock Text="{Binding Id}"/>
                                 -->
                                <TextBlock Text="{Binding Name}" FontSize="20"/>
                                <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                                <TextBlock Text="{Binding Address}" Foreground="Green"/>
                            </StackPanel>

                            <Image Grid.Column="1" Source="{Binding Picture}" Width="100" Stretch="Uniform" HorizontalAlignment="Right"/>
                            <Rectangle x:Name="BlackRect" Grid.Column="1" Fill="Black" Width="100" Visibility="Collapsed" HorizontalAlignment="Right"/>
                        </Grid>
                        <DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Picture}" Value="{x:Null}">
                                <Setter TargetName="BlackRect" Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="LightGray" Height="30" Margin="-5,0,-5,-5">
            <TextBlock x:Name="Status_Text" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right"/>
        </Border>

        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="Gray" Height="2" VerticalAlignment="Bottom" Margin="-5"/>
    </Grid>
</Window>
